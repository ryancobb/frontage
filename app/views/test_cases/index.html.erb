<p id="notice"><%= notice %></p>

<h1>Test Cases</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @test_cases.each do |test_case| %>
      <tr>
        <td><%= test_case.name %></td>
        <td><%= link_to 'Show', test_suite_test_case_path(test_case.test_suite_id, test_case) %></td>
        <td><%= link_to 'Edit', edit_test_suite_test_case_path(test_case.test_suite_id, test_case) %></td>
        <td><%= link_to 'Destroy', test_suite_test_case_path(test_case.test_suite_id, test_case), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Test Case', new_test_suite_test_case_path %>
