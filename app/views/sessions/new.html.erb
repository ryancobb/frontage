<div class="container">
  <div class="text-xs-center">
    <h1>Login</h1>
  </div>

  <div class="row text-xs-center">
    <div class="col-sm-12">

      <img src="">

      <%= form_tag login_path do |f| %>

      <div class="form-group row">
        <div class="col-md-4 offset-md-4">
          <input autofocus="autofocus" placeholder="Username" type="text" class="text-field input form-control" name="username" id="inputUsername" required/>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-4 offset-md-4">
          <input placeholder="Password" class="text-field input form-control" type="password" name="password" id="inputPassword" required/>
        </div>
      </div>

      <div class="form-group">
        <div class="">
          <input type="submit" value="Sign In" class="btn btn-primary btn-lg"  />
        </div>
      </div>

      <% end %>

    </div>
  </div>
</div>
