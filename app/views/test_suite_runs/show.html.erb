<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1><%= @test_suite_run.test_suite.name %></h1>
      <h4> <%= time_ago_in_words(@test_suite_run.timestamp) %> ago</h4>
    </div>
  </div>

<table class="table">
  <thead>
  </thead>
  <tbody>
    <% @test_suite_run.test_case_runs.each do |test_case_run| %>
      <tr>
        <td><%= link_to test_case_run.test_case.name, test_suite_test_case_path(@test_suite_run.test_suite_id, test_case_run.test_case.id) %></td>
        <td><%= test_case_run.status_msg %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', test_suite_test_suite_runs_path %>
</div>
