<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1><%= @test_suite.name %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <p>Test Suite passes <%= @passing_rate %>% of the time.</p>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th># of Tests</th>
            <th>Failures</th>
            <th>Errors</th>
            <th></th>
            <th></th>

          </tr>
        </thead>
        <tbody>
          <% @test_suite_runs.each do |test_suite_run| %>
            <tr>
              <td><%= test_suite_run.timestamp %></td>
              <td><%= test_suite_run.tests %></td>
              <td><%= test_suite_run.failures %></td>
              <td><%= test_suite_run.errs %></td>
              <td><%= link_to 'Show', test_suite_test_suite_run_path(test_suite_run.test_suite_id, test_suite_run)  %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
