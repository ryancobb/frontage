<div class="col-sm-12">
  <table class="table table-hover">
    <thead>
      <tr>
        <th></th>
        <th># of Tests</th>
        <th>Failures</th>
        <th>Errors</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @test_suite_runs.each do |test_suite_run| %>
        <tr class="<%= test_suite_run.css_mapping %>">
          <td><%= time_ago_in_words(test_suite_run.timestamp) %> ago</td>
          <td><%= test_suite_run.tests %></td>
          <td><%= test_suite_run.failures %></td>
          <td><%= test_suite_run.errs %></td>
          <td><%= link_to 'Show', test_suite_test_suite_run_path(test_suite_run.test_suite_id, test_suite_run)  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="row text-sm-right">
    <%= will_paginate @test_suite_runs %>
  </div>
</div>
